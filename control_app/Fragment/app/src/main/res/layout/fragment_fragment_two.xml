<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a123.wifictrl.fragment.Fragment_two">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#00C3FE"
        android:gravity="center"
        android:text="智能控制--卧室"
        android:textStyle="bold"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal">

            <Button
                android:id="@+id/room_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="#00C3FE"

                android:text="卧室"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_livingroom"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:background="#c4c4c4"
                android:text="客厅"

                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btn_outdoor"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="70dp"
                android:background="#c4c4c4"
                android:text="室外"
                android:textColor="#ffffff" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.299">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="166dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_dg_1"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/crl_light_close" />

                <TextView
                    android:id="@+id/textView99"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:text="灯光1" />

                <ImageView
                    android:id="@+id/img_btn_dg_1"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="151dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_dg_2"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/crl_light_close" />

                <TextView
                    android:id="@+id/textView96"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:text="灯光2" />

                <ImageView
                    android:id="@+id/img_btn_dg_2"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="166dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_dg_3"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/crl_light_close" />

                <TextView
                    android:id="@+id/textView93"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:text="灯光3" />

                <ImageView
                    android:id="@+id/img_btn_dg_3"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="151dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_dg_4"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/crl_light_close" />

                <TextView
                    android:id="@+id/textView94"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:text="灯光4" />

                <ImageView
                    android:id="@+id/img_btn_dg_4"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="166dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_fan_1"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/fan_close" />

                <TextView
                    android:id="@+id/textView83"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:text="风扇1" />

                <ImageView
                    android:id="@+id/img_btn_fan_1"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="151dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_fan_2"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/fan_close" />

                <TextView
                    android:id="@+id/textView80"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:text="风扇2" />

                <ImageView
                    android:id="@+id/img_btn_fan_2"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="166dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_window"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/curtain_close" />

                <TextView
                    android:id="@+id/textView77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:text=" 窗帘" />

                <ImageView
                    android:id="@+id/img_btn_window"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="151dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_glass"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/curtain_close" />

                <TextView
                    android:id="@+id/textView75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginBottom="10dp"
                    android:text=" 玻璃" />

                <ImageView
                    android:id="@+id/img_btn_glass"
                    android:layout_width="52dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/crl_btn_off" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>